{
  "compilerOptions": {
    "target": "es2019",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["ES2019"],
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "dist",
    "typeRoots": ["typings", "node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["setupJest.ts"]
}
