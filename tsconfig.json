{
  "compilerOptions": {
    "target": "es2019",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["ES2019"],
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "dist",
    "typeRoots": ["typings", "node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@tokens/*": ["src/tokens/*"],
      "@typings/*": ["typings/*"]
    }
  },
  "exclude": [
    "setupJest.ts",
    "dist",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/stories"
  ]
}
